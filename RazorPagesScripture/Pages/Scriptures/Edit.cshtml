@page
@model RazorPagesScripture.Pages_Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ID" />
            <div class="form-group">
                <input asp-for="Scripture.CreationDate" type = "hidden" class="form-control" value = "@DateTime.UtcNow.ToShortDateString()" />
                <span asp-validation-for="Scripture.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Book" class="control-label"></label>
                <input asp-for="Scripture.Book" class="form-control" />
                <span asp-validation-for="Scripture.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Verse" class="control-label"></label>
                <input asp-for="Scripture.Verse" class="form-control" />
                <span asp-validation-for="Scripture.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Entry" class="control-label"></label>
                <input asp-for="Scripture.Entry" class="form-control" />
                <span asp-validation-for="Scripture.Entry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
